{
  "codeLens.enable": true,
  "javascript.suggestionActions.enabled": false,
  "javascript.referencesCodeLens.enable": false,
  "typescript.referencesCodeLens.enable": false,
  "typescript.implementationsCodeLens.enable": false,
  "suggest.triggerAfterInsertEnter": true,
  "suggest.noselect": false,
  "suggest.labelMaxLength": 70,
  "diagnostic.errorSign": "✖",
  "diagnostic.infoSign": "ⓘ",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "workspace.workspaceFolderCheckCwd": true,
  "workspace.bottomUpFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "prettier.onlyUseLocalVersion": true,
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue",
    "markdown",
    "graphql"
  ],
  "eslint.validate": [
    "graphql"
  ],
  "[typescript][typescriptreact][graphql][javascript][python][prisma]": {
    "coc.preferences.formatOnSave": true,
  },
  "workspace.rootPatterns": [
    "tsconfig.json",
    ".git"
  ],
  "cSpell.userWords": [
    "Alacritty",
    "Neovim",
    "PDFs",
    "Pixi",
    "Postgres",
    "Shopify",
    "autoprefix",
    "autosave",
    "bookmarklet",
    "browserslist",
    "cocstatus",
    "codegen",
    "concat",
    "deserialization",
    "esbuild",
    "esbuild's",
    "exmap",
    "graphql",
    "hotspot",
    "jotai",
    "jsonb",
    "lazygit",
    "ldquo",
    "lightgreen",
    "lsquo",
    "minmax",
    "mkdir",
    "mutewinter",
    "nvim",
    "nvimrc",
    "obcommand",
    "outfile",
    "overscroll",
    "pbcopy",
    "pgdown",
    "pgup",
    "rdquo",
    "repos",
    "rsquo",
    "semibold",
    "sindresorhus",
    "skyblue",
    "smallint",
    "sourcemap",
    "submodule",
    "svgs",
    "unmount",
    "unmounting",
    "unmounts",
    "unoptimized",
    "unstage",
    "unstaged",
    "untracked",
    "uuid",
    "vimrc",
    "wasm",
    "webhook",
    "webhooks",
    "xstate"
  ],
  "cSpell.enabledLanguageIds": [
    "vim",
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "git-commit",
    "go",
    "handlebars",
    "haskell",
    "html",
    "jade",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "python",
    "pug",
    "restructuredtext",
    "rust",
    "scala",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "yaml",
    "yml",
    "sql"
  ],
  "tailwindCSS.experimental.classRegex": [
    "tw`([^`]*)",
    "tw=\"([^\"]*)",
    "tw={\"([^\"}]*)",
    "tw\\.\\w+`([^`]*)",
    "tw\\(.*?\\)`([^`]*)"
  ],
  "snippets.userSnippetsDirectory": "~/.config/nvim/MyUltiSnips",
  "languageserver": {
    "graphql": {
      "command": "graphql-lsp",
      "args": [
        "server",
        "-m",
        "stream"
      ],
      // customize filetypes to your needs
      "filetypes": [
        "typescript",
        "typescriptreact",
        "graphql"
      ]
    }
  },
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": [
    "--line-length=80"
  ],
  "python.linting.flake8Enabled": true
}
