{
  "codeLens.enable": true,
  "javascript.suggestionActions.enabled": false,
  "javascript.referencesCodeLens.enable": false,
  "typescript.referencesCodeLens.enable": false,
  "typescript.implementationsCodeLens.enable": false,
  "suggest.triggerAfterInsertEnter": true,
  "suggest.noselect": false,
  "suggest.labelMaxLength": 70,
  "diagnostic.errorSign": "✖",
  "diagnostic.infoSign": "ⓘ",
  "diagnostic.checkCurrentLine": true,
  "prettier.onlyUseLocalVersion": true,
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue",
    "markdown",
    "graphql"
  ],
  "eslint.validate": [
    "graphql"
  ],
  "coc.preferences.formatOnSaveFiletypes": [
    "graphql",
    "typescript",
    "typescriptreact"
  ],
  "cSpell.userWords": [
    "Neovim",
    "PDFs",
    "Postgres",
    "autosave",
    "bookmarklet",
    "browserslist",
    "cocstatus",
    "codegen",
    "concat",
    "derfel",
    "deserialization",
    "graphql",
    "hotspot",
    "jsonb",
    "ldquo",
    "lsquo",
    "minmax",
    "mkdir",
    "mutewinter",
    "nvim",
    "nvimrc",
    "pbcopy",
    "rdquo",
    "rsquo",
    "semibold",
    "smallint",
    "svgs",
    "unoptimized",
    "uuid",
    "vimrc",
    "webhook",
    "webhooks"
  ],
  "cSpell.enabledLanguageIds": [
    "vim",
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "git-commit",
    "go",
    "handlebars",
    "haskell",
    "html",
    "jade",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "python",
    "pug",
    "restructuredtext",
    "rust",
    "scala",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "yaml",
    "yml",
    "sql"
  ],
  "tailwindCSS.experimental.classRegex": [
    "tw`([^`]*)",
    "tw=\"([^\"]*)",
    "tw={\"([^\"}]*)",
    "tw\\.\\w+`([^`]*)",
    "tw\\(.*?\\)`([^`]*)"
  ],
  "snippets.userSnippetsDirectory": "~/.config/nvim/MyUltiSnips",
  "languageserver": {
    "graphql": {
      "command": "graphql-lsp",
      "args": [
        "server",
        "-m",
        "stream"
      ],
      // customize filetypes to your needs
      "filetypes": [
        "typescript",
        "typescriptreact",
        "graphql"
      ]
    }
  },
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--ignore", "W191", "--max-line-length", "121"]
}
